{% extends 'OdiseoPickMyStuffBundle:Frontend:layout.html.twig' %}

{% block contentClass %}about{% endblock %}

{% block content %}
<div class="container aboutus">
	<div class="row firstContent">
		<div class="col-xs-6">
			<img class="img-responsive" src="{{ asset('bundles/odiseopickmystuff/images/logo_about.png') }}">
		</div>
		<div class="col-xs-6">
			<img class="img-responsive" src="{{ asset('bundles/odiseopickmystuff/images/builds_about.png') }}">
