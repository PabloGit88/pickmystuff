{% extends 'OdiseoPickMyStuffBundle:Frontend:layout.html.twig' %}

{% block contentClass %}order{% endblock %}

{% block content %}
<div class="container home">
	<div class="row firstContent">
		<div class="col-xs-6">
			<img class="img-responsive pull-left" src="{{ asset('bundles/odiseopickmystuff/images/logo_about.png') }}">
		</div>
		<div class="col-xs-6">
			<p class="rightText">Orden</p>
		</div>
	</div>
	<div class="contentForm">
		<div class="row orderDivImage">
			<div class="col-md-12 hidden-xs">     
			</div>
		</div>
		<img class="img-responsive orderImage" src="{{ asset('bundles/odiseopickmystuff/images/image_order.png') }}">
	{{ form_start(form) }}
	    {{ form_errors(form) }}
	 	<span class="detalleOrden">Detalles de la Orden</span>
	 	
	 	{% for flashMessage in app.session.flashbag.get('notice') %}
	 	<p class="sended"><i class="glyphicon glyphicon-ok"></i> {{ flashMessage }}</p>
		{% endfor %}
		<div class="row">
			<div class="col-xs-6 firstColumn">
			 	<div class="row form-group fullname">
				    <div class="col-sm-3 col-xs-12">
				        {{ form_label(form.client.fullName) }}
				    </div>
				    <div class="col-sm-9 col-xs-12">
				        {{ form_widget(form.client.fullName, {'attr': {'class': 'form-control'}}) }}
				    </div>
			    </div>
			    {#}{#}
				<div class="row form-group phone">
				    <div class="col-sm-3 col-xs-12">
						{{ form_label(form.client.phone) }}
				    </div>
				    <div class="col-sm-9 col-xs-12">
				        {{ form_widget(form.client.phone, {'attr': {'class': 'form-control'}}) }}
				    </div>
				</div>
				<div class="row form-group email">
				    <div class="col-sm-3 col-xs-12">
				        {{ form_label(form.client.email) }}
				    </div>
				    <div class="col-sm-9 col-xs-12">
				        {{ form_widget(form.client.email, {'attr': {'class': 'form-control'}}) }}
				    </div>
				</div>
				<div class="row form-group sourceAdress">
				    <div class="col-sm-3 col-xs-12">
				        {{ form_label(form.sourceAddress) }}
				    </div>
				    <div class="col-sm-9 col-xs-12">
				        {{ form_widget(form.sourceAddress.contactName, {'attr': {'class': 'form-control'}}) }}
				    </div>
				</div>
				<div class="row form-group street">
				    <div class="col-sm-3 hidden-xs">
				    </div>
				    <div class="col-sm-9 col-xs-12">
					    {{ form_widget(form.sourceAddress.street, {'attr': {'class': 'form-control'}}) }}
				    </div>
				</div>
				<div class="row form-group">
				    <div class="col-sm-3 col-xs-12">
			       		{{ form_label(form.destinationAddress) }}
				    </div>
				    <div class="col-sm-9 col-xs-12 destinationName">
			       		{{ form_widget(form.destinationAddress.contactName, {'attr': {'class': 'form-control'}}) }}
				    </div>
				</div>
				<div class="row form-group">
				    <div class="col-sm-3 hidden-xs">
				    </div>
				    <div class="col-sm-9 col-xs-12">
				        {{ form_widget(form.destinationAddress.street, {'attr': {'class': 'form-control'}}) }}
				    </div>
				</div>
		    </div>
				    
			<div class="col-xs-1">
		    </div>
				    
			<div class="col-xs-5 secondColumn">
	 			<div class="row vehicleType">
				    <div class="col-xs-12 form-group">
						{{ form_label(form.vehicleType) }}
				        {{ form_widget(form.vehicleType, {'attr': {'class': 'form-control'}}) }}
				    </div>
				</div>
	 			<div class="row mercancyType">
				    <div class="col-xs-12 form-group">
						{{ form_label(form.mercancy.type) }}
		       			{{ form_widget(form.mercancy.type, {'attr': {'class': 'form-control'}}) }}
				    </div>
				</div>
			 	<div class="row imageFile"> 	
				    <div class="col-xs-12 form-group">
				        {{ form_label(form.mercancy.imageFile) }}
				        {{ form_widget(form.mercancy.imageFile, {'attr': {'class': 'form-control'}}) }}
				    </div> 
			 	</div>
			    
			 	<div class="row">
				    <div class="col-xs-12 addInfo">
				        <a class="pull-right showModal">+ AÃ‘ADIR INFORMACION</a>
				    </div>
			 	</div>
			 	
			 	<div class="row adds">
					{#  botton add order #}
				    <div class="col-md-3 col-sm-hidden col-xs-hidden">
				    </div> 	
				    <div class="col-md-5 col-xs-7 addOrder">
				        {{ form_widget(form.Add, {'attr': {'class': 'btn btn-default'}}) }}
				    </div> 	
					{# botton finalizar#}
				    <div class="col-md-4 col-xs-5 finalizar">
				        {{ form_widget(form.Finalizar, {'attr': {'class': 'btn btn-default'}}) }}
				    </div> 
			 	</div>
			 	
			 </div>
		</div>
	 
		<div class="modal fade">
			<div class="modal-dialog">
				<div class="modal-content">
		    		<div class="modal-header">
		       			<h3 class="modal-title text-center">Detalles de Entrega</h3>
					</div>
					<div class="celestial">
						<div class="modal-body"> 
							<div class="row">
								<div class="col-md-12 col-sm-12">
									<h3 class="text-center">Dimensiones(opcional)</h3>
								</div>
							</div>
							<div class="row"> 
							    <div class="col-md-3 col-sm-3 form-group lenght">
							        {{ form_label(form.mercancy.length) }}
							        {{ form_widget(form.mercancy.length, {'attr': {'class': 'form-control'}}) }}
							    </div> 
							    <div class="col-md-3 col-sm-3 form-group width">
							        {{ form_label(form.mercancy.width) }}
							        {{ form_widget(form.mercancy.width, {'attr': {'class': 'form-control'}}) }}
							    </div> 
							    <div class="col-md-3 col-sm-3 form-group height">
							        {{ form_label(form.mercancy.height) }}
							        {{ form_widget(form.mercancy.height, {'attr': {'class': 'form-control'}}) }}
							    </div>
							    <div class="col-md-3 col-sm-3 form-group weight">
							        {{ form_label(form.mercancy.weight) }}
							        {{ form_widget(form.mercancy.weight, {'attr': {'class': 'form-control'}}) }}
							    </div>
							</div>
						</div>
					</div>
					<div class="imgDimension">
						<img class="img-responsive hidden-xs" src="{{ asset('bundles/odiseopickmystuff/images/imageDimension.jpg') }}">
					</div>
					<div class="black">
						<div class="row">
				 			<div class="col-md-3 col-sm-3">
				 			</div>
							<div class="col-md-6 col-sm-6 form-group comments">
							     {{ form_label(form.comments) }}
							     {{ form_widget(form.comments, {'attr': {'class': 'form-control'}}) }}
							</div>
				 			<div class="col-md-3 col-sm-3">
				 			</div>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">Continuar</button>
						</div>
					</div>
				</div>
		 	</div>
		</div>
		{# fin modal #}
	</div>
	{{ form_end(form) }}
</div>
{% endblock %}